{
  "name": "biso-sites",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome lint --log-level=tracing --log-kind=json --log-file=tracing.json",
    "format": "biome format --write .",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "lefthook": "^2.0.4",
    "turbo": "^2.6.1",
    "ultracite": "6.3.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "dependencies": {
    "node-appwrite": "^20.3.0"
  }
}
