{
  "name": "api",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3003",
    "build": "next build",
    "deploy:build": "bun run build && bun run deploy:prep",
    "deploy:prep": "STANDALONE=$(find . -type d -name 'standalone' -path '*/.next/*' | head -1) && echo \"Standalone at: $STANDALONE\" && cd \"$STANDALONE\" && node server.js --help || true",
    "start": "next start",
    "analyze": "ANALYZE=true npm run build",
    "test": "NODE_ENV=test vitest run",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.74",
    "@azure/msal-node": "^3.8.3",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@pinecone-database/pinecone": "^6.1.3",
    "@repo/api": "workspace:*",
    "@repo/payment": "workspace:*",
    "ai": "^5.0.104",
    "gpt-tokenizer": "^3.4.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.11.0",
    "next": "15.5.4",
    "pdfjs-dist": "^5.4.449",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "server-only": "^0.0.1",
    "turndown": "^7.2.2",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "24.9.1",
    "@types/react": "19.2.6",
    "@types/react-dom": "19.2.2",
    "@types/turndown": "^5.0.6",
    "@types/xml2js": "^0.4.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
