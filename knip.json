{
    "$schema": "https://unpkg.com/knip@latest/schema.json",
    "ignore": [
      "**/.eslintrc.js",
      "**/tailwind.config.js",
      "**/next.config.js",
      
      "**/messages/**",
      "**/i18n/**",
      
      "**/public/**",
      
      "**/*-temp.*"
    ],
    "ignoreDependencies": [
      "@repo/eslint-config",
      "eslint",
      "typescript",
      
      "next-intl",
      
      "next-themes",
      "tailwind-merge",
      "clsx",
      "classnames"
    ],
    "ignoreExportsUsedInFile": true,
    "entry": [
      "apps/*/src/app/**/*.tsx",
      "apps/*/src/app/**/*.ts",
      "packages/*/src/**/*.ts",
      "packages/*/src/**/*.tsx"
    ]
  }